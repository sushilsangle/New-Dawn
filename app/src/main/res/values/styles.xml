<resources>

    <!--TODO Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- TODO Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/devider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--TODO This style is for all text sizes -->
    <style name="MasterTVParent" parent="ACDCMDParent">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--TODO This style is for all commands with green color -->
    <style name="MasterTVParentM" parent="ACDCMDParent">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#8BC34A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#c7d9db</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--TODO This style is for all text margin-->
    <style name="MasterTmargin" parent="MasterTVParent">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--TODO This style is for all commands arrows without bold-->
    <style name="MastersTvarrow" parent="ACDCMDParent">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">9dp</item>

    </style>
    <style name="DiscriptionCMD" parent="ACDCMDParent">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textColor">#FFEB3B</item>
    </style>

        <!--TODO Interview question and aswers style here....-->
    <style name="Questions" parent="ACDCMDParent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#D7CCC8</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AnsArrow" parent="ACDCMDParent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AnswerStyle" parent="ACDCMDParent">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <!--TODO All fragments main names are here.... -->
    <style name="TxtAllNames" parent="ACDCMDParent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff8c00</item>
    </style>

    <!--TODO All Commands with yellow background style started here.... -->

    <style name="Commands" parent="ACDCMDParent">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffd700</item>
    </style>

    <!-- TODO This style is used only for designing normal texts. -->
    <style name="AllFragmentsStyle" parent="ACDCMDParent">
        <item name="android:layout_marginTop">9dp</item>

    </style>

    <!--TODO SIP call flow design is going here....   -->

    <style name="SIPFlowCMD" parent="ACDCMDParent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#D7CCC8</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SIPCallFlowArrow" parent="ACDCMDParent">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>
    <style name="SIPCallFlowText" parent="ACDCMDParent">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <!--TODO refer below style only for ACD Commands fragmens... -->
    <style name="ACDCMDParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ACDCMD" parent="ACDCMDParent">
        <item name="android:background">#D7CCC8</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">9dp</item>

    </style>
    <style name="ACDCMDArrow" parent="ACDCMDParent">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>

    </style>
    <style name="ACDCMDAnswer" parent="ACDCMDParent">
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
