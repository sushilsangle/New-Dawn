<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/devider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--This style is for all text sizes -->
    <style name="MasterTVParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--This style is for all commands with green color -->
    <style name="MasterTVParentM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#8BC34A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#c7d9db</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--This style is for all text margin-->
    <style name="MasterTmargin" parent="MasterTVParent">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--This style is for all commands arrows without bold-->
    <style name="MastersTvarrow" parent="MasterTVParent">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">-></item>
    </style>


    <style name="Questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#D7CCC8</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
